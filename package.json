{
  "name": "hbm",
  "version": "1.0.0",
  "description": "Heart-beat monitor - Plus",
  "main": "index.js",
  "scripts": {
    "build": "tsc --project sales",
    "start:prod": "npm run build:sales && node dist/index.js",
    "start:dev": "ts-node-dev 'src/index.ts'",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "format": "prettier --write 'src/**/*.js' --config ./.prettierrc",
